import java.util.Scanner;

public class CakeBakingSimulation {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Welcome to the Cake Baking Simulation!");
        System.out.println("Let's bake a delicious cake.");

        System.out.println("Step 1: Preheat the oven to 350°F (175°C).");
        System.out.println("Press 'Enter' when the oven is ready...");
        scanner.nextLine();

        System.out.println("Step 2: Grease and flour a cake pan.");
        System.out.println("Step 3: In a mixing bowl, combine flour, sugar, baking powder, and salt.");
        System.out.println("Step 4: Add eggs, milk, vegetable oil, and vanilla extract. Mix well.");
        System.out.println("Press 'Enter' when the mixture is well mixed...");
        scanner.nextLine();

        System.out.println("Step 5: Pour the batter into the prepared cake pan.");
        System.out.println("Step 6: Place the cake pan in the preheated oven.");
        System.out.println("Step 7: Bake for 30-35 minutes, or until a toothpick comes out clean.");
        System.out.println("Press 'Enter' when the cake is done baking...");
        scanner.nextLine();

        System.out.println("Step 8: Remove the cake from the oven and let it cool in the pan.");
        System.out.println("Step 9: Once cooled, run a knife around the edges and remove the cake from the pan.");

        System.out.println("\nCongratulations! Your cake is ready to be enjoyed.");

        scanner.close();
    }
}
